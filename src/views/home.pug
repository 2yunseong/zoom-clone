doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body 
        header
            h1 Noom
        main
            div#welcome
                form
                    input(placeholder='room name', require, type='text')#roomname
                    input(placeholder="nickname", require, type='text')#nickname
                    button Enter Room
                h4 Open Rooms
                ul
            div#room
                h3
                ul
                form#msg
                    input(placeholder='message' require, type='text')
                    button Send
            div#videoCall
                h3 영상통화 하기
                video#myFace(autoplay, playsinline width='400' height='400')
                button#mute Mute
                button#camera Camera
                select#cameraSelect
            div#videoWelcome
                form
                    input(placeholder='room name', require, type='text')
                    button Enter Room
                
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 